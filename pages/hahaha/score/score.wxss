

.score {
    width: 650rpx;
    height: 650rpx;
    background-color: white;
    margin: 30rpx auto;
    border-radius: 10rpx;
    padding: 20rpx;
}

.score-shop {
    padding-bottom: 20rpx;
    /*background-color: red;*/
    display: flex;
    border-bottom: 2rpx solid #f6f6f6;
}

.score-shop-logo {
    width: 80rpx;
    height: 80rpx;
    /*background-color: green;*/
    border-radius: 100%;
}

.score-shop-name {
    flex: 1;
    font-size: 28rpx;
    line-height: 80rpx;
    padding-left: 20rpx;
    /*background-color: yellow;*/
}

.score-tip {
    font-size: 28rpx;
    line-height: 140rpx;
    display: block;
    text-align: center;
    margin-top: 10rpx;
    /*background-color: red;*/
}

.score-star {
    /*background-color: red;*/
    height: 60rpx;
    text-align: center;
    margin-bottom: 96rpx;
}

.score-icon {
    width: 60rpx;
    height: 60rpx;
    background-color: #dddddd;
    margin: 0 10rpx;
    border-radius: 6rpx;
}

.score-icon-active {
    width: 60rpx;
    height: 60rpx;
    background-color: #ffd300;
    margin: 0 10rpx;
    border-radius: 6rpx;
}

.score-input {
    width: calc( 100% - 40rpx );
    height: 200rpx;
    font-size: 28rpx;
    border: 2rpx solid #eeeeee;
    padding: 20rpx;
    border-radius: 10rpx;
}


/*--------------------------------submit--------------------------------*/


.submit {
    margin: 0 auto;
	width: 690rpx;
	height: 80rpx;
	background-color: #ffd300;
	text-align: center;
    border-radius: 10rpx;
}

.submit-text {
	font-size: 28rpx;
	line-height: 80rpx;
	color: #000;
}






