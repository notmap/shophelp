	content: "Âáè";
	padding: 0 4rpx;
	line-height: 30rpx;
	color: white;
	height: 30rpx;
	background-color: #f07373;
	position: absolute;
	top: -4rpx;
	left: 30rpx;
}

.notice-promotion-discount {
	margin-right: 20rpx;
}
